{
  "name": "@source4society/scepter-utility-lib",
  "version": "5.0.0",
  "description": "Useful functions commonly used within application development",
  "main": "lib/index.js",
  "repository": "https://github.com/source4societyorg/SCEPTER-utility-lib.git",
  "author": "Source 4 Society",
  "license": "AGPL-3.0",
  "private": false,
  "scripts": {
    "test": "eslint ./src/*.js ./tests/*.js && jest --coverage",
    "build": "uglifyjs ./src/*.js -o ./lib/index.js",
    "prepublish": "yarn test & npm run build"
  },
  "jest": {
    "coverageReporters": [
      "text",
      "html",
      "cobertura"
    ],
    "coverageDirectory": "./coverage",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 99,
        "branches": 99,
        "functions": 99,
        "lines": 99
      }
    },
    "moduleDirectories": [
      "node_modules"
    ],
    "testRegex": "tests/.*\\.test\\.js$"
  },
  "devDependencies": {
    "eslint": "^6.4.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.17.0",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "immutable": "^4.0.0-rc.12",
    "jest-cli": "^24.9.0",
    "uglify-es": "^3.3.9"
  }
}
